//        *
//      * *
//    * * *
//  * * * *
#include<iostream>
using namespace std;
int main()
{
    int r;
    cout << "\nHow many row you want to print: ";
    cin >> r;
    for(int i = (r-1); i>=0; i--)
    {
        for(int spc=i; spc>0; spc--)
        {
            cout << "  ";
        }
        for(int j=r; j>i; j--)
        {
            cout << " *";
        }
        cout << "\n";
    }
}
